using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Pause_Game : MonoBehaviour
{
    public void Pause()
    {
        if (Time.timeScale == 1)    
            Time.timeScale = 0;     //zatrzymanie czasu
        else if (Time.timeScale == 0)
            Time.timeScale = 1;     //puszczenie czasu
    }
}
